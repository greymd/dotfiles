#compdef av

# Function to retrieve AWS profiles from the config file
_get_aws_profiles() {
    awk '/profile/{gsub(" *]$", "", $0); print $NF}' "$HOME"/.aws/config
}

# Completion function for av command
_av() {
    local -a profiles
    profiles=($(_get_aws_profiles))
    _describe 'profile' profiles
}

compdef _av av
